@model BrickBox.Models.Domain.LegoSet

@{
    ViewBag.Title = "Add set";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>@ViewBag.Message</h2>
</hgroup>

@using (Html.BeginForm())
{
    @Html.Label("Name of set:")
    @Html.TextBox("setNameTextBox")<br />
    @Html.Label("ID number of set:")
    @Html.TextBox("setNumberTextBox")<br />
    @Html.Label("Number of pieces included in set:")
    @Html.TextBox("pieceCountTextBox")<br />
    @Html.Label("MSRP:")
    @Html.TextBox("msrpTextBox")<br /><br />
    
    <button type="submit">Add set to inventory</button>
}


